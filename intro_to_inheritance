#include <iostream>
using namespace std;

class B {                    // Base class (Temel sınıf)
private:
    int i;
public:
    void set_i(int n);
    int get_i();
};

class D : public B {         // Derived class (Türetilmiş sınıf)
private:
    int j;
public:
    void set_j(int n);
    int mul();
};

void B::set_i(int n) { i = n; }
int B::get_i() { return i; }

void D::set_j(int n) { j = n; }
int D::mul() { 
    return j * get_i();  // Base class fonksiyonunu kullanma
}

int main() {
    B ob1; 
    D ob2;
    
    ob1.set_i(10);
    ob2.set_i(20);     // Base class fonksiyonu
    ob2.set_j(30);     // Derived class fonksiyonu
    
    cout << ob1.get_i() << endl;  // 10
    cout << ob2.get_i() << endl;  // 20
    cout << ob2.mul() << endl;    // 600 (20 * 30)
    return 0;
}
